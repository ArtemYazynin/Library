<div class="panel panel-default">
	<div class="panel-heading">Publishers</div>
	<div class="panel-body">
		<div>
			<table id="publishers-table" class="table table-hover">
				<thead>
				<tr>
					<th>Date</th>
					<th></th>
				</tr>
				</thead>
				<tbody>
				<tr ng-repeat="invoice in ctrl.Invoices">
					<td ng-click="actions.enableEdit($event,invoice)">
						<span ng-bind="invoice.Date">

							</span>
					</td>
					<td style="width: 9%;">

						<div>
							<button type="button" class="btn btn-danger" ng-click="actions.remove(invoice)">
								<span class="glyphicon glyphicon-remove"></span>
							</button>
						</div>
					</td>
				</tr>
				@*<tr ng-click="actions.addNew($event)">
					<td colspan="2">
						<i>Click to add new publisher...</i>
					</td>
				</tr>*@
				</tbody>
			</table>
		</div>
	</div>
</div>
