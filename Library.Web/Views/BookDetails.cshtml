<div class="col-lg-12" ng-cloak>
	<form name="BookCreateFrom" ng-submit="actions.save();BookCreateFrom.$setPristine()" novalidate>
		<div class="form-group">
			<label for="Name">Name</label>
			<input type="text" class="form-control" name="Name" id="Name" ng-model="vm.Name" required/>
			<span style="color: red;" ng-show="BookCreateFrom.Name.$error.required">Name is required</span>
		</div>
		<div class="form-group">
			<label for="Isbn">Isbn</label>
			<input type="text" class="form-control" name="Isbn" id="Isbn" ng-model="vm.Isbn" required/>
			<span style="color: red;" ng-show="BookCreateFrom.Isbn.$error.required">Isbn is required</span>
		</div>
		<div class="form-group">
			<label for="Description">Description</label>
			<input type="text" class="form-control" name="Description" id="Description" ng-model="vm.Description"/>
		</div>
		<div class="form-group">
			<label for="Edition">Edition</label>
			<select class="form-control" name="Edition" id="Edition" ng-model="vm.Edition"
			        ng-options="edition.Name +' '+ edition.Year for edition in Editions | orderBy: 'Name' track by edition.Id"
			        required>
				<option value="">-Chose-</option>
			</select>
			<span style="color: red;" ng-show="BookCreateFrom.Edition.$error.required">Edition is required</span>
		</div>
		<div class="form-group">
			<label for="Publisher">Publisher</label>
			<select class="form-control" name="Publisher" id="Publisher" ng-model="vm.Publisher"
			        ng-options="publisher.Name for publisher in Publishers | orderBy: 'Name' track by publisher.Id"
			        required>
				<option value="">-Chose-</option>
			</select>
			<span style="color: red;" ng-show="BookCreateFrom.Publisher.$error.required">Publisher is required</span>
		</div>
		<div class="form-group">
			<label for="Authors">Authors</label>
			<oi-select id="Authors" name="Authors"
			           oi-options="author.Lastname +' '+ author.Firstname + ' ' + (author.Middlename || '') for author in Authors | orderBy: 'Lastname'"
			           ng-model="vm.Authors"
			           multiple
			           placeholder="Select Authors...">
			</oi-select>
		</div>
		<div class="form-group">
			<label for="Genres">Genres</label>
			<oi-select id="Genres" name="Genres" oi-options="genre.Name for genre in Genres | orderBy: 'Name'"
			           ng-model="vm.Genres"
			           multiple
			           placeholder="Select Genres..."
			           required>
			</oi-select>
			<span style="color: red;" ng-show="BookCreateFrom.Genres.$error.required">Genres can not be empty</span>
		</div>
		<button type="submit" class="btn btn-primary" ng-disabled="BookCreateFrom.$pristine || BookCreateFrom.$invalid">Submit</button>
		<button type="button" class="btn btn-danger" ng-click="actions.back()">Back</button>
	</form>
</div>