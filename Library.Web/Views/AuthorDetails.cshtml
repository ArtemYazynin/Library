<div class="col-lg-12" ng-cloak>
	<form name="AuthorDetails" ng-submit="authorDetails.actions.save()" novalidate>
		<div class="form-group">
			<label for="Lastname">Lastname</label>
			<input type="text" class="form-control" name="Lastname" id="Lastname" ng-model="authorDetails.vm.Lastname" required/>
			<span style="color: red;" ng-show="AuthorDetails.Lastname.$error.required">Lastname is required</span>
		</div>
		<div class="form-group">
			<label for="Firstname">Firstname</label>
			<input type="text" class="form-control" name="Firstname" id="Firstname" ng-model="authorDetails.vm.Firstname" required/>
			<span style="color: red;" ng-show="AuthorDetails.Firstname.$error.required">Firstname is required</span>
		</div>
		<div class="form-group">
			<label for="Middlename">Middlename</label>
			<input type="text" class="form-control" name="Middlename" id="Middlename" ng-model="authorDetails.vm.Middlename" />
		</div>
		<button type="submit" class="btn btn-primary" ng-disabled="AuthorDetails.$pristine || AuthorDetails.$invalid">Submit</button>
		<button type="button" class="btn btn-danger" ng-click="authorDetails.actions.back()">Back</button>
	</form>
</div>