@using Library.Services.DTO
@model IEnumerable<BookDto>

<div class="container">
	<nav class="navbar navbar-default">
		<div class="container-fluid">
			<div class="navbar-header">
				<a class="navbar-brand" href="#">Library</a>
			</div>
			<div id="navbar" class="navbar-collapse collapse">
				<ul class="nav navbar-nav">
					<li><a href="#">Books</a></li>
					<li><a href="#">Authors</a></li>
					<li><a href="#">Genres</a></li>
					<li><a href="#">Publishers</a></li>
					<li><a href="#">Invoices</a></li>
					<li><a href="#">Rents</a></li>
					<li><a href="#">Subscribers</a></li>
				</ul>
			</div>
		</div>
	</nav>
	<div class="panel panel-default">
		<div class="panel-heading">Books</div>
		<div class="panel-body">
			<div class="col-lg-12 col-lg-offset-4">
				<form>
					<div class="input-group">
						<span class="input-group-addon filter">Title</span>
						<input id="byName" name="byName" type="text" class="form-control" placeholder="JavaScript для профессионалов"/>
					</div>
					<div class="input-group">
						<span class="input-group-addon filter">Author</span>
						<input id="byAuthors" name="byAuthors" type="text" class="form-control" placeholder="Джон Резиг..."/>
					</div>
					<div class="input-group">
						<span class="input-group-addon filter">Authors</span>
						<input id="byMultipleAuthors" name="byMultipleAuthors" type="text" class="form-control" placeholder="Резиг, Фергюсон"/>
					</div>
					<div class="input-group">
						<span class="input-group-addon filter">Full search</span>
						<input id="byAll" name="byAll" type="text" class="form-control" placeholder="Search by title, authors and descriptions" />
					</div>
					<div class="form-group">
						<div class="checkbox">
							<label><input type="checkbox" value="false">Without authors</label>
						</div>
					</div>
				</form>
			</div>
			<br/>
			<br/>
			<br/>
			<div>
				<table class="table table-bordered table-condensed table-hover">
					<thead>
					<tr>
						<th>Title</th>
						<th>Genres</th>
						<th>Authors</th>
						<th>Publisher</th>
					</tr>
					</thead>
					<tbody>
					@foreach (BookDto book in Model)
					{
						<tr>
							<td>@book.Name</td>
							<td>@string.Join(", ", @book.Genres)</td>
							<td>
								@string.Join(", ", book.Authors)
							</td>
							<td>@book.Publisher.Name</td>
						</tr>
					}
					</tbody>
				</table>
			</div>
		</div>
	</div>

</div>