@using Library.Services.DTO
@model IEnumerable<BookDto>

<div>
	<h1>HOME PAGE</h1>
</div>

<div>
	<table class="table table-bordered table-hover">
		<thead>
		<tr>
			<th>Название</th>
			<th>Авторы</th>
		</tr>
		</thead>
		<tbody>
			@foreach (BookDto book in Model)
			{
				<tr>
					<td>@book.Name</td>
					<td>
						@string.Join(", ",book.Authors)
					</td>
				</tr>
			}

		</tbody>
	</table>
</div>